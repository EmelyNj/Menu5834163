<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu5834163.CC"
             Title="CC">
    <ScrollView>
    <VerticalStackLayout Padding="5" Spacing="10">
        <Label 
            Text="EJERCICIO 1 : El Cambio del Cliente"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

         <Image Source="cambio.jpg" 
                VerticalOptions="Center"
                HorizontalOptions="Center" 
                WidthRequest="300"/>

            <Label Text="Digite el costo del articulo :"/>
            <Entry Placeholder="Dinero del Articulo" x:Name="Articulo"/>

            <Label Text="Digite el dinero entregado :"/>
            <Entry Placeholder="Dinero Entegrado" x:Name="Cambio"/>

            <Button  Text="Calcular Cambio a Entregar"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"/>

            <Entry Text="Cambio del Cliente"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>